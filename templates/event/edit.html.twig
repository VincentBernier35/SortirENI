{% extends 'base.html.twig' %}

{% block title %}
    Modification
{% endblock %}

{% block body %}
    <h1>Modifier cette sortie</h1>
    {{ form_start(eventForm) }}
    {{ form_row(eventForm.name) }}
    {{ form_row(eventForm.startTime) }}
    {{ form_row(eventForm.deadLine) }}
    {{ form_row(eventForm.placeMax) }}
    <p>{{ form_row(eventForm.duration)}}minutes</p>
    {{ form_row(eventForm.info) }}
    {{ form_row(eventForm.place) }}<br>
    {% set canDelete = '' %}
    {% if event.state.reference == 0 and event.promoter.id == user.id %}
        {% set canDelete = 'yes'%}
    {% endif %}
    <button type="submit" name="save" class="btn btn-primary ">Enregistrer</button>
    {% if canDelete == 'yes' %}
        <button type="submit" name="delete" class="btn btn-primary ">Supprimer la sortie</button>
    {% endif %}
    <button type="submit" name="gotohome" class="btn btn-primary ">Annuler</button>
    <button type="submit" name="publish" class="btn btn-primary ">Publier</button>
    {{ form_end(eventForm) }}
{% endblock %}

