{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .wrap{
            width: 100%;
            height: 80vh;
            background-image: linear-gradient(to right top, white,white);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form{
            width: 700px;
            height: 460px;
            background: white;
            border-radius: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            font-weight: bold;
            transition: all 0.2s ease-in-out;
            font-size: 15px;
            box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
            padding-top: 20px;
        }
        .title {
            color: #61677c;
            font-size: 30px;
            margin-bottom: 20px;
        }
        .submitBtn {
            background-color: #ebecf0;
            text-shadow: 1px 1px 0 #fff;
            border-radius: 7px;
            font-size: 15px;
            padding: 12px;
            border: 0;
            outline: 0;
        }
    </style>
<div class="wrap">
    <div class="form">
    <h1 class="title">Annuler une sortie</h1>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <p>Nom de la sortie : {{ event.name }}</p>
                <p>Date et heure de la sortie : {{  event.startTime | date('d/m/Y') }}</p>
                <p>Ville organisatrice : {{ user.site.name }}</p>
                <p>Lieu : {{ event.place.name }}</p>
            </div>
        </div>
    </div>
    {{ form_start(eventForm) }}
    {{ form_row(eventForm.cancelReason) }}<br><br>
    <div>
        <button type="submit" name="save" class="submitBtn">Enregistrer</button>
        <button type="submit" name="cancel" class="submitBtn">Annuler</button>
    </div>
    {{ form_end(eventForm) }}
    </div>
</div>
{% endblock %}

