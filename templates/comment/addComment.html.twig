{% extends 'base.html.twig' %}

{% block title %}AddComment{% endblock %}

{% block body %}
    <style>
        .wrap{
            width: 100%;
            height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form{
            padding-left: 150px;
            padding-top: 30px;
            width: 900px;
            height: 460px;
            background: white;
            border-radius: 20px;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            font-weight: bold;
            transition: all 0.2s ease-in-out;
            box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
            font-size: 20px;
        }
        .title {
            color: #61677c;
            font-size: 35px;
            margin-bottom: 40px;
        }
        .inputContainer {
            position: relative;
            height: 45px;
            width: 100%;
            margin-bottom: 10px;
        }
        .submitBtn, .my-form input {
            background-color: #ebecf0;
            text-shadow: 1px 1px 0 #fff;
            border-radius: 7px;
            font-size: 15px;
            padding: 12px;
            border: 0;
            outline: 0;
        }
        .my-form input{
            margin-left: 8px;
            box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #fff;
            box-sizing: border-box;
            transition: all 0.2s ease-in-out;
            appearance: none;
            -webkit-appearance: none;
            position: absolute;
            outline: none;
            background: none;
            z-index: 1;
        }
        .my-form textarea{
            width: 500px;
            height: 200px;
            margin-left: 8px;
            box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #fff;
            box-sizing: border-box;
            transition: all 0.2s ease-in-out;
            appearance: none;
            -webkit-appearance: none;
            position: absolute;
            outline: none;
            background: none;
            z-index: 1;
            border: none;
            border-radius: 10px;
        }
        .my-form ::placeholder {
            color: transparent;
        }
        .submitBtn {
            color: #ff6f61;
            font-weight: bold;
            transition: all 0.2s ease-in-out;;
            cursor: pointer;
            font-size: 14px;
            box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
        }
        .submitBtn:hover {
            box-shadow: -2px -2px 5px #fff, 2px 2px 5px #babecc;
            transform: translateY(-2px);
        }
    </style>
    <div class="wrap">
        <div class="form">
            <h1 class="title">Comment avez vous trouvé cet événement ?</h1>
                {{ form_start(commentForm, {'attr': {'class': 'my-form'}}) }}
            <div class="inputContainer">
                {{ form_widget(commentForm) }}
            </div><br><br><br><br><br><br><br>
                <button class="submitBtn" type="submit">Ajouter</button>
                {{ form_end(commentForm) }}
        </div>
    </div>
{% endblock %}
