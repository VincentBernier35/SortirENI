{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <style>

        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .wrap{
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(to right top, white,white);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form{
            width: 800px;
            height: 460px;
            background: white;
            border-radius: 20px;
            display: flex;
            overflow: hidden;
            font-weight: bold;
            transition: all 0.2s ease-in-out;;
            cursor: pointer;
            font-size: 16px;
            box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
        }
        .left{
            width: 350px;
            height: 460px;
            background-color: aqua;
            overflow: hidden;
        }
        .left img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .right{
            padding-top: 20px;
            padding-left: 20px;
            width: 450px;
            height: 460px;
            overflow: hidden;
        }
        .title {
            color: #61677c;
            font-size: 30px;
            margin-bottom: 20px;
        }.inputContainer {
             position: relative;
             height: 45px;
             width: 100%;
             margin-bottom: 10px;
         }
        .submitBtn, .input{
            background-color: #ebecf0;
            text-shadow: 1px 1px 0 #fff;
            border-radius: 7px;
            font-size: 16px;
            padding: 16px;
            border: 0;
            outline: 0;
        }
        .input {
            box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #fff;
            box-sizing: border-box;
            transition: all 0.2s ease-in-out;
            appearance: none;
            -webkit-appearance: none;
            position: absolute;
            height: 100%;
            width: 80%;
            outline: none;
            background: none;
            z-index: 1;
        }
        .label {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 0 4px;
            color: #DADCE0;
            font-size: 16px;
            transition: 0.5s;
            z-index: 0;
        }
        ::placeholder {
            color: transparent;
        }
        .submitBtn {
            color: #61677c;
            font-weight: bold;
            transition: all 0.2s ease-in-out;;
            cursor: pointer;
            font-size: 16px;
            box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
        }

        .submitBtn:hover {
            box-shadow: -2px -2px 5px #fff, 2px 2px 5px #babecc;
            transform: translateY(-2px);
        }
        .input:focus + .label {
            top: -7px;
            left: 3px;
            z-index: 10;
            font-size: 14px;
            font-weight: 600;
            color: purple;
        }
    </style>
    <div class="wrap">
        <form class="form">
            <div class="left">
                <img src="{{ asset('images/logo.png') }} " ></img>
            </div>
            <div class="right">
                <h1 class="title">Inscrivez-vous et Rejoignez-nous !</h1>
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm) }}
                <div class="inputContainer">
                    {{ form_widget(registrationForm) }}
                </div><br><br><br><br><br><br><br><br>
                <div>
                <input type="submit" class="submitBtn" value="Enregistrer">
                <a href="{{ path('main_home') }}">
                    <button class="submitBtn ">Annuler</button>
                </a>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </form>
    </div>
{% endblock %}
