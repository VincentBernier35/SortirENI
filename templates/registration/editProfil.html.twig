{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        .wrap{
            width: 100%;
            height: 80vh;
            background-image: linear-gradient(to right top, white,white);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form{
            width: 900px;
            height: 800px;
            background: white;
            border-radius: 20px;
            display: flex;
            font-weight: bold;
            transition: all 0.2s ease-in-out;
            font-size: 16px;
            box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
        }
        .title {
             color: #61677c;
             font-size: 35px;
             margin-bottom: 20px;
         }
        .inputContainer {
            position: relative;
            height: 45px;
            width: 100%;
            margin-bottom: 10px;
        }
        .submitBtn, .my-form input {
            background-color: #ebecf0;
            text-shadow: 1px 1px 0 #fff;
            border-radius: 7px;
            font-size: 15px;
            padding: 12px;
            border: 0;
            outline: 0;
        }
        .my-form input {
            margin: 8px;
            box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #fff;
            box-sizing: border-box;
            transition: all 0.2s ease-in-out;
            appearance: none;
            -webkit-appearance: none;
            outline: none;
            background: none;
            z-index: 1;
        }

        .my-form ::placeholder {
            color: transparent;
        }
        .submitBtn {
            color: #61677c;
            font-weight: bold;
            transition: all 0.2s ease-in-out;;
            cursor: pointer;
            font-size: 14px;
            box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
        }
        .submitBtn:hover {
            box-shadow: -2px -2px 5px #fff, 2px 2px 5px #babecc;
            transform: translateY(-2px);
        }
        .left {
            padding-top: 100px;
            width: 500px;
            height: 560px;
            overflow: hidden;
        }
        .right{
            padding-top: 20px;
            padding-left: 30px;
            width: 500px;
            height: 960px;
            overflow: hidden;
        }
    </style>
    <div class="wrap">
        <div class="form">
            <div class="right">
            <h1 class="title">Modifier votre profil</h1>
            {{ form_start(registrationForm, {'attr': {'class': 'my-form'}}) }}
                <div class="inputContainer">
                    {{ form_widget(registrationForm) }}
                </div><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
                <div class="buttons">
                <button type="submit" name="saveProfil" class="submitBtn">Enregistrer</button>
                <button type="submit" name="deleteProfil" class="submitBtn">Supprimer mon profil</button>
                <a href="{{ path('main_home') }}">
                    <button class="submitBtn">Annuler</button>
                </a>
                </div>
            </div>
            <div class="left">
                {% if user.image != null %}
                    <img src="{{ asset(app_images_user_directory ~ '/' ~ user.image) }}"
                         class="img-fluid" alt="image" style="width: 300px"/>
                {% endif %}
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
